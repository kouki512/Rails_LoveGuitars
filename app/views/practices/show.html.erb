<div class="container-fluid">
  <div class="row practice-detail-container">

   <!-- youtubeリンクが存在していた場合表示 -->
    <% if @practice.textbook == "youtube" && @practice.youtube_url.present? %>
    <div class="col-lg-9 col-xl-9">
      <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @practice.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <% end %>
    

    <div class="aaa"> <!--youtubeの動画が存在していたら専用のレイアウトに変更 -->
        
                <div class="practice-menu">
                    <div class="practice-contents ">
                      <h5 class ="practice-contents-title ">練習内容</h5>
                      <%= @practice.title %>
                    </div>
                    <div class="practice-contents">
                      <h5 class ="practice-contents-title">練習詳細</h5>
                      <%= @practice.details %>
                    </div>
                    <div class="practice-contents">
                      <h5 class ="practice-contents-title">練習メモ</h5>
                      <%= @practice.body %>
                    </div>
                    <div class="practice-contents">
                      <h5 class ="practice-contents-title">教材</h5>
                      <%= @practice.textbook_i18n %>
                    </div>
                    <div class="practice-contents">
                      <h5 >参考URL</h5>
                       <% if @practice.reference_url.present? %> <!-- URLが投稿されていた場合 -->
                        <a href="<%= @practice.reference_url %>" target="_blank" rel="noopener noreferrer"class="gene-btn">練習する！</a>
                      <% else %>
                        リンクが投稿されていません
                      <% end %>
                    </div>
                    <div class="practice-contents-others">
                      <div class="practice-content-other" >
                        <h5 >練習状況</h5>
                        <% if @practice.is_finish == false %>
                            練習中
                          <% else %>
                            練習完了！
                          <% end %>
                      </div>
                      <div class="practice-content-other">
                        <h5 >公開設定</h5>
                        <% if @practice.is_public == false %>
                            プライベート
                        <% else %>
                            公開中
                        <% end %>
                      </div>
                    </div>
                    

                    
          <%= link_to "編集する", edit_practice_path(@practice) %>
          <%= link_to "削除する", practice_path(@practice),method: :delete  %>
    </div>
  </div>
</div>

